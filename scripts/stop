#!/bin/bash
set -e

echo "🛑 Stopping any running Home Assistant..."
pkill -f "homeassistant" || true

echo "🧼 Cleaning Home Assistant config cache..."
rm -rf ./config/.storage
rm -rf ./config/home-assistant_v2.db
rm -rf ./config/*.log
rm -rf ./config/*.yaml.bkp

echo "🗑️  Removing synced custom components..."
rm -rf ./config/custom_components/21energy_heater_control

echo "✅ All clean!"
